# =======================
# PRODUCTION ENVIRONMENT
# =======================

# Django Environment (development or production)
DJANGO_ENV=production

# Django Secret Key (CHANGE THIS!)
SECRET_KEY=your-super-secret-production-key-minimum-50-characters-long

# Debug Mode (MUST be False in production)
DEBUG=False

# Allowed Hosts (comma-separated - add your domain)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration (PostgreSQL recommended for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=attendance_db
DB_USER=attendance_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# SSL/Security Settings
SECURE_SSL_REDIRECT=True

# Email Configuration (SMTP for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Redis Configuration (REQUIRED for production WebSocket support)
# Used by Django Channels for WebSocket message routing
REDIS_URL=redis://127.0.0.1:6379/0

# AWS S3 Configuration (Optional - for media file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
