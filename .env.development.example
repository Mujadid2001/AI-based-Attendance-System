# =======================
# DEVELOPMENT ENVIRONMENT
# =======================

# Django Environment (development or production)
DJANGO_ENV=development

# Django Secret Key
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug Mode
DEBUG=True

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (SQLite for development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Email Configuration (console backend for dev)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USE_TLS=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=

# Redis Configuration (for Channels WebSocket - optional in development)
# Development uses in-memory channel layer by default
# Uncomment to use Redis in development:
# REDIS_URL=redis://127.0.0.1:6379/0
